<div class="panel panel-info">
<div class="panel-heading"><%= link_to edit_task_path(task) do %>
		created <%= time_ago_in_words(task.created_at)%>
		<% end %>
	<%= link_to "x", task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete this task?"}, class: "pull-right" %>
	</div>
	<div class="panel-body"><%= task.content %></div>
	<div class="panel-footer text-center">
		<% if task.state == "to_do" %>
		<%= link_to " <i class='fa fa-chevron-right'></i>".html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn btn-primary btn-md" %>
		<% elsif task.state == "doing"%>
		<div class="btn-group">
			<%= link_to " <i class='fa fa-chevron-left'></i> ".html_safe, change_task_path(task, state: "to_do"), method: :put, class: "btn btn-primary btn-md pull-left" %>
			<%= link_to " <i class='fa fa-chevron-right'></i>".html_safe, change_task_path(task, state: "done"), method: :put, class: "btn btn-primary btn-md pull-right" %>
		</div>
		<% else %>
		<%= link_to " <i class='fa fa-chevron-left'></i>".html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn btn-primary btn-md" %>
		<% end %>

	</div>
</div>